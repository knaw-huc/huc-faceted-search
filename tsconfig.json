{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "build"],
  "files": ["src/index.tsx"]
}

