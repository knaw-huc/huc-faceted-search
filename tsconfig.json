{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "target": "es6",
    "paths": {
      "react": ["node_modules/@types/react"],
      "@types/react": ["node_modules/@types/react"]
    },
  },
  "exclude": ["node_modules", "build"],
  "files": ["src/index.tsx"]
}

